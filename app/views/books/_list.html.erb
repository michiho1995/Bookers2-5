   <h2>User info</h2>
   <table class="table">
        <tbody>
           <%= attachment_image_tag user, :profile_image, :fill, 100, 100,  fallback: "no_image.jpg",size: "100x100" %>
             <tr>
              <th class="profile-name">name      <%= user.name %></th>          <!--@user → user-->
             </tr>
             <tr>
              <th class="profile-introduction">introduction      <%= user.introduction %></th>  <!--@user → user-->
             </tr>
             <tr>
              <th class="profile-stats"><%= render 'users/stats' %></th>
             </tr>
             <tr>
              <th class="profile-follow_form"><%= render 'users/follow_form',user: @user %></th>
             </tr>
        </tbody>
   </table>

   <% if user.id == current_user.id %>
     <p>
      <%= link_to edit_user_path(user) do %>
        <span class= "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_26318"></span>
      <% end %>
     </p>
   <% end %>
   <br>
   <br>
   <h2>New book</h2>
     <%= form_with model: book, local:true do |f| %>   <!-- @book → book -->
       <h5>Title</h5>
     <%= f.text_field :title, class:"col-xs-12" %>
       <h5>Opinion</h5>
     <%= f.text_area :body, class:"col-xs-12" %><br>
 <br>
 <br>
     <%= f.submit 'Create Book', class:"col-xs-12 btn btn-primary" %>
     <% end %>